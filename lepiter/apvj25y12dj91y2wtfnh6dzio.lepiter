				},
				"createTime" : {
					"__type" : "time",
					"time" : {
						"__type" : "dateAndTime",
						"dateAndTimeString" : "2025-09-08T11:05:38.995444-05:00"
					}
				},
				"editEmail" : {
					"__type" : "email",
					"emailString" : "<unknown>"
				},
				"editTime" : {
					"__type" : "time",
					"time" : {
						"__type" : "dateAndTime",
						"dateAndTimeString" : "2025-09-08T12:00:29.300057-05:00"
					}
				},
				"uid" : {
					"__type" : "uid",
					"uidString" : "n8V3GK76DQCFu1VlA44NtQ=="
				},
				"paragraphStyle" : {
					"__type" : "textStyle"
				},
				"string" : "A few things a post-mortem doesn’t have to be: long, an apology letter, or a judgment about the people involved in either creating or resolving the issue."
			},
