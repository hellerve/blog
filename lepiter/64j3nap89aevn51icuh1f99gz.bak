					"uidString" : "lbiHh3LyDQCmWa0QCBR5Zw=="
				},
				"paragraphStyle" : {
					"__type" : "textStyle"
				},
				"string" : "### Keeping the mindset"
			},
			{
				"__type" : "textSnippet",
				"children" : {
					"__type" : "snippets",
					"items" : [ ]
				},
				"createEmail" : {
					"__type" : "email",
					"emailString" : "<unknown>"
